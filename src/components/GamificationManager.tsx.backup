  // Ensuite v√©rifier si c'est un √©tudiant
  if (!user || user.role !== 'student') {
    return (
      <div className="p-6 text-center">
        <Trophy className="mx-auto h-12 w-12 text-gray-400 mb-4" />
        <h3 className="text-lg font-medium text-gray-900 mb-2">Gamification</h3>
        <p className="text-gray-600">Ce syst√®me est r√©serv√© aux √©l√®ves.</p>
      </div>
    );
  }

  if (!studentProgress) {
    return (
      <div className="p-6 text-center">
        <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto mb-4"></div>
        <p>Chargement de ta progression...</p>
      </div>
    );
  }

  const progressToNextLevel = getProgressToNextLevel(studentProgress.totalPoints);

  return (
    <div className="bg-white rounded-lg shadow-lg p-6">
      {/* En-t√™te */}
      <div className="flex items-center justify-between mb-6">
        <h2 className="text-2xl font-bold text-gray-900 flex items-center">
          <Trophy className="h-8 w-8 text-yellow-500 mr-3" />
          Gamification
        </h2>
      </div>

      <div className="space-y-6">
        {/* Niveau et progression */}
        <div className="bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg p-6 text-white">
          <div className="flex items-center justify-between mb-4">
            <div>
              <h3 className="text-xl font-bold">Niveau {studentProgress.level}</h3>
              <p className="text-blue-100">{studentProgress.totalPoints} points totaux</p>
            </div>
            <div className="text-right">
              <div className="text-3xl font-bold">{studentProgress.totalPoints}</div>
              <div className="text-blue-100">points</div>
            </div>
          </div>
          
          {/* Barre de progression */}
          <div className="w-full bg-blue-400 rounded-full h-3 mb-2">
            <div 
              className="bg-yellow-400 h-3 rounded-full transition-all duration-300"
              style={{ width: `${progressToNextLevel}%` }}
            ></div>
          </div>
          <p className="text-sm text-blue-100">
            {Math.round(progressToNextLevel)}% vers le niveau {studentProgress.level + 1}
          </p>
        </div>

        {/* Statistiques */}
        <div className="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div className="bg-gray-50 rounded-lg p-4 text-center">
            <div className="text-2xl font-bold text-blue-600">{studentProgress.streak}</div>
            <div className="text-sm text-gray-600">Jours cons√©cutifs</div>
          </div>
          <div className="bg-gray-50 rounded-lg p-4 text-center">
            <div className="text-2xl font-bold text-green-600">{studentProgress.lessonsCompleted}</div>
            <div className="text-sm text-gray-600">Le√ßons compl√©t√©es</div>
          </div>
          <div className="bg-gray-50 rounded-lg p-4 text-center">
            <div className="text-2xl font-bold text-purple-600">{studentProgress.assignmentsCompleted}</div>
            <div className="text-sm text-gray-600">Devoirs compl√©t√©s</div>
          </div>
          <div className="bg-gray-50 rounded-lg p-4 text-center">
            <div className="text-2xl font-bold text-yellow-600">{studentProgress.badges.length}</div>
            <div className="text-sm text-gray-600">Badges d√©bloqu√©s</div>
          </div>
        </div>

        {/* Badges disponibles */}
        <div className="space-y-4">
          <h3 className="text-lg font-semibold mb-4">Badges disponibles</h3>
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {availableBadges.map((badge) => {
              const unlocked = studentProgress.badges.find(b => b.id === badge.id);
              return (
                <div
                  key={badge.id}
                  className={`p-4 rounded-lg border-2 transition-all ${
                    unlocked
                      ? 'border-yellow-400 bg-yellow-50'
                      : 'border-gray-200 bg-gray-50'
                  }`}
                >
                  <div className="flex items-center space-x-3">
                    <div className="text-3xl">{badge.icon}</div>
                    <div className="flex-1">
                      <h4 className={`font-semibold ${
                        unlocked ? 'text-yellow-800' : 'text-gray-600'
                      }`}>
                        {badge.name}
                      </h4>
                      <p className="text-sm text-gray-500">{badge.description}</p>
                      <p className="text-xs text-gray-400">
                        {unlocked ? 'D√©bloqu√© !' : `${badge.pointsRequired} points requis`}
                      </p>
                    </div>
                    {unlocked && (
                      <div className="text-yellow-500">
                        <Award className="h-6 w-6" />
                      </div>
                    )}
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      </div>
    </div>
  );
};

export default GamificationManager;
